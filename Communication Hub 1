<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    // JavaScript to handle message sending
    document.getElementById('groupMessageInput').addEventListener('keypress', function(e) {
        if (e.key === 'Enter' && this.value.trim() !== '') {
            const message = this.value.trim();
            const messageElement = document.createElement('div');
            messageElement.classList.add('p-2', 'border-bottom');
            messageElement.textContent = message;
            document.getElementById('groupMessages').appendChild(messageElement);
            this.value = '';
            this.scrollIntoView({ behavior: 'smooth', block: 'end' });
        }
    });

    document.getElementById('individualMessageInput').addEventListener('keypress', function(e) {
        if (e.key === 'Enter' && this.value.trim() !== '') {
            const message = this.value.trim();
            const messageElement = document.createElement('div');
            messageElement.classList.add('p-2', 'border-bottom');
            messageElement.textContent = message;
            document.getElementById('individualMessages').appendChild(messageElement);
            this.value = '';
            this.scrollIntoView({ behavior: 'smooth', block: 'end' });
        }
    });
</script>

